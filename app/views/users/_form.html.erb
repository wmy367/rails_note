<div class="row">
    <div class="span6 offset3">
        <%= form_for(@user,url:{action:'create'},html:{multipart:true}) do |f| %>
            <%= f.label :name,"名字" %>
            <%= f.text_field :name %>
            <%= f.label :email,"邮箱" %>
            <%= f.text_field :email %>
            <%= f.label :password,'密码' %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation,'密码确认' %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit "#{submit_label}",class: "btn btn-large btn-primary" %>
        <% end %>
    </div>
</d
